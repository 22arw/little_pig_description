<?xml version="1.0"?>
<robot name="steering_component" 
    xmlns:xacro="http://ros.org/wiki/xacro">


    <xacro:macro name="steering_component" params="prefix reflect">

        <link name="${prefix}_steer_link">
            <visual>
                <geometry>
                    <cylinder radius="0.05" length="0.01"/>
                </geometry>
                <origin rpy="1.57075 0.0 0.0" xyz="0 0 0.0"/>
            </visual>
            <collision>
                <geometry>
                    <cylinder radius="0.05" length="0.01"/>
                </geometry>
                <origin rpy="1.57075 0.0 0.0" xyz="0 0 0.0"/>
            </collision>
            <xacro:default_inertial mass="${steering_mass}"/>
        </link>

        <joint name="${prefix}_steer_joint" type="revolute">
            <parent link="base_link"/>
            <child link="${prefix}_steer_link"/>
            <origin xyz="0.7 ${0.45 * reflect} -0.15" rpy="0.0 0.0 0.0"/>
            <axis xyz="0.0 0.0 0.1"/>
            <limit lower="-0.30" upper="0.30" effort="1.0" velocity="0.1"/>
        </joint>

    </xacro:macro>

</robot>